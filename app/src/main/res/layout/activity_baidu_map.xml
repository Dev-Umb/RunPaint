<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".BaiduMap.MyBaiduMap"
    android:orientation="vertical"
    android:id="@+id/map_draw"
    android:keepScreenOn="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/title"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/BaiduMapView"
        android:clickable="true"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginBottom="70dp"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存路径"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/shape"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/saveSign"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:text="我的轨迹"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/find_history"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:text="关闭轨迹"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/exit"/>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                >

            </androidx.core.widget.NestedScrollView>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="250dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/draw"
                android:id="@+id/draw"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DIYColor"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@drawable/dialog_shape"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/天依蓝"
                    android:id="@+id/DIY_BLUE"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="#EFD9F5"
                    android:id="@+id/DIY_PINK"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="#4CAF50"
                    android:id="@+id/DIY_GREEN"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/酷炫黑"
                    android:id="@+id/DIY_BLACK"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/阳光黄"
                    android:id="@+id/DIY_YELLOW"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/活力橙"
                    android:id="@+id/DIY_ORANGE"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/乐正红"
                    android:id="@+id/DIY_RED"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/极简白"
                    />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/极简白"
        android:paddingTop="50dp"
        >

        <ListView
            android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#656566"
            android:dividerHeight="1dp" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>